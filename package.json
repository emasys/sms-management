{
  "name": "sms-management",
  "version": "1.0.0",
  "description": "sms management application",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node ./src/index.js",
    "build": "babel src --out-dir ./dist --source-maps",
    "start": "node ./dist/index.js",
    "test": "NODE_ENV=test nyc mocha ./test/*.spec.js --require @babel/register --exit && nyc report --reporter=text-lcov | coveralls",
    "test:watch": "NODE_ENV=test mocha --timeout=50000 ./test/*.spec.js --require @babel/register --watch",
    "debug": "node --inspect-brk ./dist/index.js",
    "migrate": "sequelize db:migrate",
    "heroku-postbuild": "npm run build && npm run migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emasys/sms-management.git"
  },
  "keywords": [
    "hapijs"
  ],
  "author": "emasys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emasys/sms-management/issues"
  },
  "homepage": "https://github.com/emasys/sms-management#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@hapi/code": "^5.3.1",
    "@hapi/glue": "^6.1.0",
    "@hapi/hapi": "^18.3.1",
    "@now-ims/hapi-now-auth": "^1.3.1",
    "bcrypt": "^5.0.0",
    "boom": "^7.3.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.2",
    "dotenv": "^6.2.0",
    "fancy-log": "^1.3.3",
    "glue": "^6.0.0",
    "h2o2": "^8.1.2",
    "hapi": "^17.8.1",
    "hapi-auth-jwt2": "^8.6.1",
    "hapi-swagger": "^9.4.2",
    "inert": "^5.1.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.14",
    "nyc": "^14.1.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.10.1",
    "sequelize-cli": "^5.5.0",
    "short-unique-id": "^1.1.1",
    "uuid": "^3.3.2",
    "vision": "^5.4.4"
  }
}
